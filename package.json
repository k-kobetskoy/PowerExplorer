{
  "name": "power-explorer",
  "version": "0.0.0",
  "main": "dist-electron/main.js",
  "private": true,
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --configuration=production && node config-env.js",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "electron": "node electron-launcher.js",
    "electron-dev": "concurrently \"npm run start\" \"wait-on http://localhost:4200 && set ELECTRON_START_URL=http://localhost:4200 && electron .\"",
    "electron-build": "ng build --configuration production && electron .",
    "build:electron": "npx tsc -p electron/tsconfig.electron.json && node scripts/copy-electron-files.js",
    "package": "electron-builder build --win --publish never",
    "package-mac": "electron-builder build --mac --publish never",
    "package-linux": "electron-builder build --linux --publish never"
  },
  "dependencies": {
    "@angular/animations": "^18.2.13",
    "@angular/cdk": "^18.2.14",
    "@angular/common": "^18.2.13",
    "@angular/compiler": "^18.2.13",
    "@angular/core": "^18.2.13",
    "@angular/forms": "^18.2.13",
    "@angular/material": "^18.2.14",
    "@angular/platform-browser": "^18.2.13",
    "@angular/platform-browser-dynamic": "^18.2.13",
    "@angular/router": "^18.2.13",
    "@azure/msal-browser": "^4.11.0",
    "@azure/msal-node": "^3.5.1",
    "@codemirror/lang-xml": "^6.1.0",
    "@codemirror/lint": "github:codemirror/lint",
    "@codemirror/theme-one-dark": "^6.1.2",
    "angular-split": "^17.2.0",
    "codemirror": "^6.0.1",
    "electron-store": "^8.1.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.10"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.2.16",
    "@angular/cli": "^18.2.16",
    "@angular/compiler-cli": "^18.2.13",
    "@types/electron": "^1.6.10",
    "@types/jasmine": "~4.3.0",
    "@types/node": "^20.11.28",
    "concurrently": "^8.2.2",
    "electron": "^30.0.5",
    "electron-builder": "^24.13.3",
    "jasmine-core": "~4.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.4.5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.powerexplorer.app",
    "productName": "Power Explorer",
    "directories": {
      "output": "release/"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "dist",
        "to": "dist",
        "filter": ["**/*"]
      }
    ],
    "protocols": {
      "name": "Power Explorer URL",
      "schemes": [
        "powerexplorer"
      ]
    },
    "win": {
      "target": ["nsis"],
      "icon": "src/assets/icons/icon.ico"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "src/assets/icons/icon.icns"
    },
    "linux": {
      "target": ["AppImage"],
      "icon": "src/assets/icons/icon.png"
    }
  }
}
